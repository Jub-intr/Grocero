<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grocero! Your Grocery Solution"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
                android:background="@drawable/custom2"
                android:padding="50dp"/>


        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter grocery name"
            android:layout_marginTop="160dp"
            android:background="@drawable/addbackground"
            android:textAlignment="center"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter price "
            android:background="@drawable/addbackground"
            android:textAlignment="center"
            android:inputType="text|numberDecimal"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter quantity"

            android:background="@drawable/addbackground"
            android:textAlignment="center"
            android:inputType="text|numberDecimal"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Add Grocery" />


</LinearLayout>